# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x86
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86)
  Components_config = debug_x86
  imgui_config = debug_x86
  implot_config = debug_x86
  MyUIApp_config = debug_x86

else ifeq ($(config),debug_x86_64)
  Components_config = debug_x86_64
  imgui_config = debug_x86_64
  implot_config = debug_x86_64
  MyUIApp_config = debug_x86_64

else ifeq ($(config),release_x86)
  Components_config = release_x86
  imgui_config = release_x86
  implot_config = release_x86
  MyUIApp_config = release_x86

else ifeq ($(config),release_x86_64)
  Components_config = release_x86_64
  imgui_config = release_x86_64
  implot_config = release_x86_64
  MyUIApp_config = release_x86_64

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Components imgui implot MyUIApp

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Components: imgui implot
ifneq (,$(Components_config))
	@echo "==== Building Components ($(Components_config)) ===="
	@${MAKE} --no-print-directory -C Components -f Makefile config=$(Components_config)
endif

imgui:
ifneq (,$(imgui_config))
	@echo "==== Building imgui ($(imgui_config)) ===="
	@${MAKE} --no-print-directory -C Vendor/imgui -f Makefile config=$(imgui_config)
endif

implot:
ifneq (,$(implot_config))
	@echo "==== Building implot ($(implot_config)) ===="
	@${MAKE} --no-print-directory -C Vendor/implot -f Makefile config=$(implot_config)
endif

MyUIApp: Components imgui implot
ifneq (,$(MyUIApp_config))
	@echo "==== Building MyUIApp ($(MyUIApp_config)) ===="
	@${MAKE} --no-print-directory -C MyUI -f Makefile config=$(MyUIApp_config)
endif

clean:
	@${MAKE} --no-print-directory -C Components -f Makefile clean
	@${MAKE} --no-print-directory -C Vendor/imgui -f Makefile clean
	@${MAKE} --no-print-directory -C Vendor/implot -f Makefile clean
	@${MAKE} --no-print-directory -C MyUI -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86"
	@echo "  debug_x86_64"
	@echo "  release_x86"
	@echo "  release_x86_64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Components"
	@echo "   imgui"
	@echo "   implot"
	@echo "   MyUIApp"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"